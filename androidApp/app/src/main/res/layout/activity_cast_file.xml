<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CastFileActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/media_renderer_devices_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="8"
        tools:listitem="@layout/media_renderer_device_list_item" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cast_file_footer_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/horizontal_line_view"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#ddd" />

        <TextView
            android:id="@+id/cast_file_name_caption_tv"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:text="Cast file name"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line_view" />

        <TextView
            android:id="@+id/cast_file_name_tv"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cast_file_name_caption_tv"
            tools:text="FILE_X.txt" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>